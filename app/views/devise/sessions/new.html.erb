<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => { :class =>'form-horizontal'}) do |f| %>

<fieldset>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label', :for => 'email_input'%>
    <div class="controls">
      <%= f.email_field :email , :id => 'email_input', :class => 'input-xlarge' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => 'control-label', :for => 'email_input'%>
    <div class="controls">
      <%= f.password_field :password , :id => 'email_input', :class => 'input-xlarge' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Sign in", :class => 'btn btn-primary'%>
  </div>
</fieldset>
<% end %>

<%= render :partial => "devise/shared/links" %>