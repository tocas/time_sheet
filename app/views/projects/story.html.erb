<div class="row-fluid">
  <div class="span2">
    <%= link_to projects_path, :class => "btn btn-primary" do %>   
        <i class="icon-arrow-left icon-white"></i>
        Back to Projects
    <% end %>
  </div>
</div>
<div class="row-fluid">
