<div>
  
<div class="row-fluid">
  <div class="span2">
    &nbsp
  </div>
  <div class="span10">
    <h1><%= @project.name %> / <%= @story.name %></h1>  
  </div>
<div>
  
<div class="row-fluid">
&nbsp
<div>

<div class="row-fluid">
  <div class="span2">&nbsp</div>
  <div class="span2">
      <%= @story.story_type %>
  </div>
  <div class="span8">
    <div class="row-fluid">
      <h3>Story description</h3>
    </div>
    <div class="row-fluid">
      <blockquote>
        <%= @story.description%>
      </blockquote>
    </div>
  </div>
